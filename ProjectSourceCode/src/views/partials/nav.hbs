<header class="bg-[#2b0c0c] p-2 shadow-md text-center">
  <!-- Title -->
  <h1 class="text-5xl font-bold text-[#9c3c3c] tracking-wider" style="font-family: 'Graffiti', sans-serif;">
    GraffTrak
  </h1>

  <!-- Centered Navbar -->
  <nav class="bg-[#2b0c0c] p-3 flex justify-center">
    <div class="flex justify-center space-x-10">
      <a class="bg-[#4d1c1c] text-[#9c3c3c] px-6 py-2 rounded-lg border border-[#9c3c3c] hover:bg-[#5e2626]" href="/">Graff Map</a>
      <a class="bg-[#4d1c1c] text-[#9c3c3c] px-6 py-2 rounded-lg border border-[#9c3c3c] hover:bg-[#5e2626]" href="/profile">My Account</a>

      {{#if userLoggedIn}}
        <a class="bg-[#4d1c1c] text-[#9c3c3c] px-6 py-2 rounded-lg border border-[#9c3c3c] hover:bg-[#5e2626]" href="/logout">Logout</a>
      {{else}}
        <a class="bg-[#4d1c1c] text-[#9c3c3c] px-6 py-2 rounded-lg border border-[#9c3c3c] hover:bg-[#5e2626]" href="/login">Login</a>
      {{/if}}
    </div>
    <div class="w-1/5 flex justify-end">
      <script>
        const userLoggedIn = true; // Replace with actual authentication check
        if (userLoggedIn) {
          document.write('<a href="/logout" class="bg-[#4d1c1c] text-[#9c3c3c] px-6 py-2 rounded-lg border border-[#9c3c3c] hover:bg-[#5e2626]">Logout</a>');
        }
      </script>
    </div>
  </nav>
</header>
