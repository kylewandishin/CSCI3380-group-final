<div class="popup-content" style="max-width: 300px; font-family: Arial, sans-serif;">
  <img src="{{imgUrl}}" alt="Popup image" style="width: 100%; border-radius: 8px; margin-bottom: 10px;">
  <p style="margin-bottom: 15px;">{{text}}</p>

  {{#if comments.length}}
    <div style="border-top: 1px solid #ccc; padding-top: 10px;">
      <h4 style="margin: 0 0 10px 0; font-size: 1em;">Comments:</h4>
      <ul style="list-style: none; padding-left: 0;">
        {{#each comments}}
          <li style="margin-bottom: 8px; padding: 6px 10px; background-color: #f1f1f1; border-radius: 6px;">
            <strong>{{this.username}}:</strong> {{this.comment_text}}
          </li>
        {{/each}}
      </ul>
    </div>
  {{else}}
    <p style="color: #888;">No comments yet.</p>
  {{/if}}

  <!-- Add Comment Button -->
  <button onclick="openCommentModal({{graffitiId}})" style="margin-top: 15px; background-color: #007BFF; color: white; padding: 8px 12px; border: none; border-radius: 4px; cursor: pointer;">
    Add Comment
  </button>
</div>

