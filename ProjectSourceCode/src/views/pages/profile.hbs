<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GraffTrak</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
  </head>
  <body class="h-screen flex items-center justify-center">
    <!-- Main Rectangle that fills the screen -->
    <div class="bg-[#3B0A0A] w-full h-full flex flex-col justify-center items-center p-20">
        <!-- First Inner Rectangle -->
        <div class="bg-[#4D1111] w-full max-w-[95%] h-[45%] p-5 mb-10 flex flex-row justify-between items-center">
            <!-- Profile Picture -->
            <div class="bg-[#3B0A0A] w-1/4 h-full flex items-center justify-center text-white text-center">
                MY PROFILE PIC
            </div>
            <!-- Username and Bio -->
            <div class="w-1/2 h-full flex flex-col justify-between text-white">
                <h1 class="text-3xl font-bold text-center">MY USERNAME</h1>
                <p class="text-center">MY BIO - ART STYLE, GENERAL LOCATION, YEARS EXPERIENCE</p>
            </div>
            <!-- Stats -->
            <div class="w-1/4 h-full flex flex-col justify-between text-white text-right">
                <p>488 FOLLOWERS | 98 FOLLOWING</p>
                <p>JOINED 3/13/2025</p>
                <p>MEMBER FOR 8 DAYS</p>
            </div>
        </div>

        <!-- Second Inner Rectangle -->
        <div style="background-color: #4D1111; padding: 20px; border-radius: 8px; width: 100%; overflow: hidden; margin-top: 20px;">
            <h2 style="text-align: center; color: white;">Post Catalog</h2>

            <div style="display: flex; align-items: center; justify-content: center;">
                <button id="scroll-left" style="padding: 10px; cursor: pointer; margin: 0 10px; border-radius: 5px; border: none; background-color: #333; color: white;">&lt;</button>

                <div id="post-container" style="display: flex; overflow-x: auto; gap: 15px; padding: 15px; max-width: 1000px; scroll-behavior: smooth;">
                
                {{#each posts}}
                <div style="min-width: 250px; background-color: #3B0A0A; padding: 15px; border-radius: 8px; color: white;">
                    <h3>{{this.title}}</h3>
                    <p>{{this.description}}</p>
                    <form action="/comments/create" method="POST">
                    <input type="hidden" name="graffiti_id" value="{{this.id}}">
                    <textarea name="comment_text" placeholder="Add a comment..." style="color: black; background-color: white;"></textarea>
                    <button type="submit" style="padding: 5px; margin-top: 5px; border-radius: 5px; border: none; background-color: #555; color: white;">Comment</button>
                    </form>
                </div>
                {{/each}}

                </div>

                <button id="scroll-right" style="padding: 10px; cursor: pointer; margin: 0 10px; border-radius: 5px; border: none; background-color: #333; color: white;">&gt;</button>
            </div>
        </div>
    </div>
    <script>
    document.getElementById('scroll-left').onclick = () => {
        document.getElementById('post-container').scrollBy({ left: -300, behavior: 'smooth' });
    };

    document.getElementById('scroll-right').onclick = () => {
        document.getElementById('post-container').scrollBy({ left: 300, behavior: 'smooth' });
    };
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>
    </body>
</html>
