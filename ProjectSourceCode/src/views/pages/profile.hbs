<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GraffTrak</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
  </head>
  <body class="h-screen flex items-center justify-center">
    <!-- Main Rectangle that fills the screen -->
    <div class="bg-[#3B0A0A] w-full h-full flex flex-col justify-center items-center p-20">
        <!-- First Inner Rectangle -->
        <div class="bg-[#4D1111] w-full max-w-[95%] h-[45%] p-5 mb-10 flex flex-row justify-between items-center">
            <!-- Profile Picture -->
            <div class="bg-[#3B0A0A] w-1/4 h-full flex items-center justify-center text-white text-center">
                MY PROFILE PIC
            </div>
            <!-- Username and Bio -->
            <div class="w-1/2 h-full flex flex-col justify-between text-white">
                <h1 class="text-3xl font-bold text-center">MY USERNAME</h1>
                <p class="text-center">MY BIO - ART STYLE, GENERAL LOCATION, YEARS EXPERIENCE</p>
            </div>
            <!-- Stats -->
            <div class="w-1/4 h-full flex flex-col justify-between text-white text-right">
                <p>488 FOLLOWERS | 98 FOLLOWING</p>
                <p>JOINED 3/13/2025</p>
                <p>MEMBER FOR 8 DAYS</p>
            </div>
        </div>

        <!-- Second Inner Rectangle -->
        <div class="bg-[#4D1111] w-full max-w-[95%] h-[90%] p-5 flex flex-col items-center">
            <h2 class="text-2xl font-bold text-white mb-5">POST CATALOG</h2>
            <!-- New post form -->
            <form 
                action="/posts/create" 
                method="POST" 
                enctype="multipart/form-data"
                class="mb-4 w-full max-w-md bg-[#3B0A0A] p-4 border border-[#4D1111] rounded shadow"
            >
                <div class="mb-3">
                <label for="descriptionInput" class="block mb-1 text-white">Description:</label>
                <textarea 
                    id="descriptionInput" 
                    name="description" 
                    rows="3"
                    class="w-full bg-[#3B0A0A] text-white border border-[#4D1111] rounded p-2"
                ></textarea>
                </div>

                <div class="mb-3">
                <label for="imageInput" class="block mb-1 text-white">Image:</label>
                <input 
                    id="imageInput" 
                    name="image" 
                    type="file" 
                    accept="image/*"
                    class="block w-full text-sm text-white
                        file:mr-4 file:py-2 file:px-4
                        file:rounded file:border-0
                        file:text-sm file:font-semibold
                        file:bg-[#4D1111] file:text-white
                        hover:file:bg-[#3B0A0A]"
                />
                </div>

                <button 
                type="submit" 
                class="bg-red-800 text-white py-2 px-4 rounded hover:bg-red-700 font-bold"
                >
                Create Post
                </button>
            </form>
            <!-- End of new post form -->

            <div class="grid grid-cols-4 gap-5 w-full h-full">
                <!-- Post 1 -->
                <div class="bg-[#3B0A0A] flex items-center justify-center text-white">
                    POST 1
                </div>
                <!-- Post 2 -->
                <div class="bg-[#3B0A0A] flex items-center justify-center text-white">
                    POST 2
                </div>
                <!-- Post 3 -->
                <div class="bg-[#3B0A0A] flex items-center justify-center text-white">
                    POST 3
                </div>
                <!-- Post 4 -->
                <div class="bg-[#3B0A0A] flex items-center justify-center text-white">
                    POST 4
                </div>
            </div>
        </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>
    </body>
</html>
